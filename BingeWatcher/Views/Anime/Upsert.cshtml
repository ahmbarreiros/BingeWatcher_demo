@model AnimeVM

<form method="post" enctype="multipart/form-data">
    <input asp-for="Anime.Id" hidden />
    <input asp-for="Anime.Main_Picture" hidden />
    <div class="row">
        <div class="col-10">
            <div class="row form-group">
                <h2>@(Model.Anime.Id != 0 ? "Atualizar" : "Criar") Anime</h2>
                <hr />
            </div>
        </div>
        <div class="row p-3">
            <div class="form-group p-3 col-12 col-md-6">
                <label asp-for="Anime.Title" for="animeTitle"></label>
                <input asp-for="Anime.Title" id="animeTitle" class="form-control" />
                <span asp-validation-for="Anime.Title" class="text-danger"></span>
            </div>
            <div class="form-group p-3 col-12 col-md-6">
                <label asp-for="Anime.Start_Date" for="animeStartDate"></label>
                <input asp-for="Anime.Start_Date" id="animeStartDate" class="form-control" />
                <span asp-validation-for="Anime.Start_Date" class="text-danger"></span>
            </div>
        </div>
    </div>
</form>